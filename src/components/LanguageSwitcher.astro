---
import { languages, getLangFromUrl, getRelativeLocaleUrl } from '../i18n/utils';

const currentLang = getLangFromUrl(Astro.url);
const otherLang = currentLang === 'en' ? 'ar' : 'en';
const currentPath = Astro.url.pathname.replace(/^\/(en|ar)/, '') || '/';
---

<a
  href={getRelativeLocaleUrl(otherLang, currentPath.substring(1))}
  class="flex items-center justify-center text-[var(--white-icon)] transition-colors"
  aria-label={`Switch to ${languages[otherLang]}`}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <circle cx="12" cy="12" r="10"></circle>
    <line x1="2" y1="12" x2="22" y2="12"></line>
    <path
      d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"
    ></path>
  </svg>
</a>
